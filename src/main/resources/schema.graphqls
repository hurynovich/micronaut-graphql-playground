type Query {
    bookById(id: ID): Book
    generateFakeAuthor: FakeAuthor!
}

type FakeAuthor {
    firstName (min: Int = 3, max: Int = 8) : String!
    lastName (min: Int = 4, max: Int = 16): String!
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
    price: Float
}

type Author {
    id: ID
    firstName : String!
    lastName: String!
}
